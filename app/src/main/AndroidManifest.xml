<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pe.edu.upc.attentionapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controllers.activities.ContractActivity"
            android:parentActivityName=".controllers.activities.FindNurseActivity"></activity>
        <activity android:name=".controllers.activities.FindNurseActivity"
            android:parentActivityName=".controllers.activities.HomeActivity"/>
        <activity android:name=".controllers.activities.NurseProfileActivity" />
        <activity android:name=".controllers.activities.HomeActivity" />
        <activity
            android:name=".controllers.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.activities.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controllers.activities.CreateAccountActivity"
            android:parentActivityName=".controllers.activities.LoginActivity" />
    </application>

</manifest>